// ---------------------------- Normalize ----------------------------- //
// -------------------------------------------------------------------- //

html, body
	margin: 0
	padding: 0

html
	font-weight: normal
	font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
	box-sizing: border-box

*, *:after, *:before
	box-sizing: inherit

.svg_defs
	display: none

svg:not(:root)
	overflow: hidden